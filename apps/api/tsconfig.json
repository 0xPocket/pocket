{
  "extends": "tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@pocket-contract/*": ["../../packages/pocket-contract/*"],
      "@lib/types/*": ["../../packages/types/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["../../packages/pocket-contract/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "node_modules"]
}
