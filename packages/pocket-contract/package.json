{
  "name": "pocket-contract",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "clean": "yarn hardhat clean && rm -rf node_modules .turbo",
    "dev": "yarn seed",
    "fork": "yarn showNetwork ; yarn hardhat node",
    "build": "hardhat compile",
    "healthcheck": "curl -m 10 --retry 40 --retry-connrefused --retry-delay 1 http://127.0.0.1:8545/ >/dev/null 2>&1",
    "deploy": "yarn hardhat run ./scripts/deploy.ts --network localhost",
    "reset": "yarn hardhat run ./scripts/reset.ts --network localhost",
    "seed": "yarn hardhat run ./scripts/seed.ts --network localhost",
    "lint": "eslint \"{test,utils,helpers}/**/*.ts\" --fix",
    "showNetwork": "yarn hardhat run ./scripts/displayNetwork.ts",
    "test": "FORCECOLOR=1 yarn hardhat test"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "ethers": "^5.6.8",
    "hardhat-gas-reporter": "^1.0.8"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/hardhat-upgrades": "^1.20.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.1.1",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.4",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "chai": "^4.3.6",
    "envfile": "^6.17.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.23",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.0.0",
    "typescript": "^4.7.3"
  }
}
