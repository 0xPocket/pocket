{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": [
    "./hardhat.config.ts",
    "./ts",
    "./typechain-types",
    "./test",
    "./scripts",
    "./abi",
    "./utils",
    "../../packages/config/**/*.js",
    "./deploy"
  ]
}
