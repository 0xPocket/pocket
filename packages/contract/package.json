{
  "name": "@lib/contract",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf node_modules types PocketFaucet.json",
    "deploy:node": "anvil -f https://polygon-mainnet.g.alchemy.com/v2/3yzPlXcA41Y49wI2INbE3q8kLi19ME2U",
    "build:types": "typechain --target ethers-v5 --out-dir=types ./PocketFaucet.json",
    "predev": "cp ../pocket-contract/out/PocketFaucet.sol/PocketFaucet.json ./PocketFaucet.json && yarn build:types",
    "dev": "yarn deploy:node",
    "healthcheck": "curl -m 10 --retry 5 --retry-connrefused --retry-delay 3 http://127.0.0.1:8545/",
    "seed": "ts-node ./seed.ts"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "ethers": "^5.6.8"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.0.0",
    "ts-node": "^10.8.0",
    "typechain": "^8.0.0",
    "typescript": "^4.7.2"
  }
}
