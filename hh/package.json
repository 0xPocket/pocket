{
	"scripts": {
		"clean": "rm -rf node_modules ts/types && forge clean",
		"postinstall": "yarn forge:install && yarn forge:build && yarn build:types",
		"forge:install": "forge install --root foundry",
		"forge:build": "forge build",
		"forge:deploy": "forge create foundry/src/PocketFaucet.sol:PocketFaucet --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 --constructor-args 0x4e3Decbb3645551B8A19f0eA1678079FCB33fB4c --rpc-url http://127.0.0.1:8545",
		"forge:node": "anvil -f https://polygon-mainnet.g.alchemy.com/v2/3yzPlXcA41Y49wI2INbE3q8kLi19ME2U",
		"healthcheck": "curl -m 10 --retry 10 --retry-connrefused --retry-delay 1 http://127.0.0.1:8545/",
		"build:types": "typechain --target ethers-v5 --out-dir=ts/types ./foundry/out/PocketFaucet.sol/PocketFaucet.json",
		"dev": "yarn forge:node",
		"deploy": "echo -n NEXT_PUBLIC_CONTRACT_ADDRESS= > ./.env && yarn forge:deploy | grep Deployed | cut -c14- >> ./.env",
		"seed": "ts-node ./ts/seed.ts"
	},
	"name": "hardhat-project",
	"devDependencies": {
		"@nomiclabs/hardhat-ethers": "^2.0.6",
		"@nomiclabs/hardhat-etherscan": "^3.0.4",
		"@nomiclabs/hardhat-waffle": "^2.0.3",
		"@openzeppelin/contracts": "^4.6.0",
		"@openzeppelin/contracts-upgradeable": "^4.6.0",
		"@openzeppelin/hardhat-upgrades": "^1.18.1",
		"@typechain/ethers-v5": "^7.2.0",
		"@typechain/hardhat": "^2.3.1",
		"@types/chai": "^4.3.1",
		"@types/mocha": "^9.1.1",
		"@types/node": "^12.20.55",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"chai": "^4.3.6",
		"dotenv": "^16.0.1",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.1",
		"eslint-plugin-promise": "^5.2.0",
		"ethereum-waffle": "^3.4.4",
		"ethers": "^5.6.8",
		"hardhat": "^2.9.7",
		"hardhat-gas-reporter": "^1.0.8",
		"prettier": "^2.6.2",
		"prettier-plugin-solidity": "^1.0.0-beta.13",
		"solhint": "^3.3.7",
		"solidity-coverage": "^0.7.21",
		"ts-node": "^10.8.1",
		"typechain": "^5.2.0",
		"typescript": "^4.7.3"
	}
