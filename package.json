{
  "name": "pocket-contract",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "clean": "yarn hardhat clean && rm -rf node_modules ts/types",
    "hh:build": "yarn hardhat compile",
    "hh:deploy": "yarn hardhat run scripts/deploy.ts --network local",
    "hh:node": "yarn hardhat node --fork https://polygon-mainnet.g.alchemy.com/v2/qLBCKN0pvsl20MhmJ2DdyQr1RhmQ_eSK",
    "healthcheck": "curl -m 10 --retry 10 --retry-connrefused --retry-delay 1 http://127.0.0.1:8545/",
    "build:types": "typechain --target ethers-v5 --out-dir=ts/types ./artifacts/contracts/PocketFaucet.sol/PocketFaucet.json",
    "build": "yarn hh:build",
    "dev": "yarn hh:node",
    "deploy": "yarn hh:deploy",
    "generate": "yarn build:types",
    "seed": "ts-node ./ts/seed.ts"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "ethers": "^5.6.8"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.4",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.18.1",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "envfile": "^6.17.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.9.7",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.8.1",
    "typechain": "^5.2.0",
    "typescript": "^4.7.3"
  }
