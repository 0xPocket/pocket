{
  "name": "pocket",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "db:seed": "turbo run db:seed",
    "hardhat:start": "turbo run hardhat:start",
    "hardhat:deploy": "turbo run hardhat:deploy",
    "env-check": "dotenv-checker --schema .env.example --env .env",
    "predev": "echo 'Checking env files'"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "turbo": "1.3.1"
  },
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-checker": "^1.1.5",
    "prettier": "^2.7.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=14.x",
    "npm": ">=7.0.0",
    "yarn": ">=1.19.0 < 2.x"
  },
  "packageManager": "yarn@1.22.17"
}
